mixin dropdown(id=id)
    .dropdown__wrapper
        .dropdown_view 2 спальни, 2 кровати...
        .expand
            <svg width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M11.3301 0.578125L12.7363 1.98438L6.73633 7.98438L0.736328 1.98438L2.14258 0.578125L6.73633 5.17188L11.3301 0.578125Z" fill="#1F2041" fill-opacity="0.5"/>
            </svg>
        .dropdown_list
            .dropdown_list_row
                .dropdown_list_cell
                    p Спальни
                .dropdown_list_cell
                    .dropdown_list_button(class="minus") -
                    .dropdown_list_value 2
                    .dropdown_list_button(class="pluse") +
            .dropdown_list_row
                .dropdown_list_cell
                    p Кровати
                .dropdown_list_cell
                    .dropdown_list_button(class="minus") -
                    .dropdown_list_value 2
                    .dropdown_list_button(class="pluse") +
            .dropdown_list_row
                .dropdown_list_cell
                    p Ванные комнаты
                .dropdown_list_cell
                    .dropdown_list_button(class="minus") -
                    .dropdown_list_value 2
                    .dropdown_list_button(class="pluse") +
                