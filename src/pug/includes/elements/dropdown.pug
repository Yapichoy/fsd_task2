mixin dropdown(id,text, ...items)
    .dropdown__wrapper(id=id)
        .dropdown_view 
            span= text
        .expand
            <svg width="13" height="8" viewBox="0 0 13 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M11.3301 0.578125L12.7363 1.98438L6.73633 7.98438L0.736328 1.98438L2.14258 0.578125L6.73633 5.17188L11.3301 0.578125Z" fill="#1F2041" fill-opacity="0.5"/>
            </svg>
        .dropdown_list
            each item in items
                .dropdown_list_row(id= item.id)
                    .dropdown_list_cell
                        p= item.name
                    .dropdown_list_cell
                        .dropdown_list_button(class="minus") -
                        .dropdown_list_value 0
                        .dropdown_list_button(class="pluse") +
            .dropdown_list_buttons_wrapper
                .dropdown_list_buttons
                    .dropdown_list_button(id="clear") Очистить
                    .dropdown_list_button(id="accept") Применить
                